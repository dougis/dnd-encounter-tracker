    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
